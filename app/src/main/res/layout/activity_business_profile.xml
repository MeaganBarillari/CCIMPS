<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:paddingBottom="24dp">


        <TextView
            android:id="@+id/business_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="Business Name"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_layout"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:text="Business Email:"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/user_email"
            android:background="@color/colorGreyBackground"
            android:textColor="@color/colorBlack"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="User Email" />

        <TextView
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="Business Mobile:"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/business_mobile"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorGreyBackground"
            android:textColor="@color/colorBlack"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="User Phone Number" />

        <TextView
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="Business Address:"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/business_address"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/colorGreyBackground"
            android:textColor="@color/colorBlack"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="User Address" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_activity_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="45dp"
            android:background="@color/colorAccent"
            android:textSize="20dp"
            android:text="@string/logout" />
    </LinearLayout>

</RelativeLayout>